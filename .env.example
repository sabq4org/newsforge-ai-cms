# ElevenLabs API Configuration for Sabq Althakiyah
# تكوين واجهة برمجة التطبيقات الخاصة بـ ElevenLabs لمنصة سبق الذكية

# ElevenLabs API Key - مفتاح واجهة برمجة التطبيقات
ELEVENLABS_API_KEY=sk_8867323770dae548ec436056590d60a04ba9a8e1840ea09c

# ElevenLabs Base URL - الرابط الأساسي للواجهة
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# Default Model Settings - إعدادات النموذج الافتراضي
ELEVENLABS_DEFAULT_MODEL=eleven_multilingual_v2
ELEVENLABS_DEFAULT_STABILITY=0.75
ELEVENLABS_DEFAULT_SIMILARITY=0.85
ELEVENLABS_DEFAULT_STYLE=0.3

# Audio Output Settings - إعدادات الصوت الناتج
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128
ELEVENLABS_OPTIMIZE_STREAMING=0

# Rate Limiting - تحديد المعدل
ELEVENLABS_MAX_REQUESTS_PER_MINUTE=100
ELEVENLABS_MAX_CHARACTERS_PER_REQUEST=5000

# Caching Settings - إعدادات التخزين المؤقت
ENABLE_AUDIO_CACHE=true
AUDIO_CACHE_DURATION=24h
AUDIO_CACHE_MAX_SIZE=1GB

# Arabic Language Optimization - تحسين اللغة العربية
ENABLE_ARABIC_OPTIMIZATION=true
ARABIC_DIACRITICS_ENHANCEMENT=true
ARABIC_PRONUNCIATION_DICTIONARY=true

# Development Settings - إعدادات التطوير
NODE_ENV=development
DEBUG_ELEVENLABS=false
LOG_API_REQUESTS=true

# Backup TTS Service (in case ElevenLabs is unavailable)
# خدمة تحويل النص إلى كلام الاحتياطية
BACKUP_TTS_SERVICE=azure
AZURE_TTS_KEY=your_azure_key_here
AZURE_TTS_REGION=westus

# Analytics and Monitoring - التحليلات والمراقبة
ENABLE_USAGE_ANALYTICS=true
TRACK_AUDIO_GENERATION=true
MONITOR_API_PERFORMANCE=true

# Security Settings - إعدادات الأمان
ENCRYPT_AUDIO_FILES=false
SECURE_API_ENDPOINTS=true
RATE_LIMIT_BY_IP=true

# Feature Flags - مؤشرات الميزات
ENABLE_VOICE_CLONING=false
ENABLE_CUSTOM_MODELS=true
ENABLE_REAL_TIME_STREAMING=true
ENABLE_BACKGROUND_PROCESSING=true

# File Storage Settings - إعدادات تخزين الملفات
AUDIO_STORAGE_PATH=/tmp/sabq-audio
MAX_AUDIO_FILE_SIZE=50MB
AUDIO_CLEANUP_INTERVAL=1h

# Quality Settings - إعدادات الجودة
AUTO_QUALITY_DETECTION=true
ADAPTIVE_BITRATE=true
NOISE_REDUCTION=true
AUDIO_NORMALIZATION=true

# Localization - التوطين
DEFAULT_LANGUAGE=ar
SUPPORT_RTL_LANGUAGES=true
ARABIC_VOICE_PRIORITY=true

# Performance Optimization - تحسين الأداء
PARALLEL_PROCESSING=true
BACKGROUND_QUEUE_SIZE=10
AUDIO_PRELOADING=true
SMART_CACHING=true